
<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <%= f.label :status, 'ステータス' %> 
    <%= f.text_field :status %>
    
    <%= f.label :content, 'タスク' %> 
    <%= f.text_field :content %>
  </ul>
  <%= f.submit '完了' %>
<% end %>
